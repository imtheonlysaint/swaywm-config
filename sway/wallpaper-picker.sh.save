#!/bin/bash

WALLPAPER_DIR="$HOME/Pictures/wallpapers"

# Select wallpaper with preview using wofi + imv
CHOICE=$(ls "$WALLPAPER_DIR" | wofi --dmenu --prompt "Pick wallpaper:")

if [ -n "$CHOICE" ]; then
    # Kill old swaybg first
    pkill -o swaybg

    # Set wallpaper
    swaybg -i "$WALLPAPER_DIR/$CHOICE" -m fill &
fi

